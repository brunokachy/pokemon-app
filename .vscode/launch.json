{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["-t", "10000", "test/**/*.spec.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "console": "internalConsole",
            "outFiles": [
                "${workspaceRoot}"
            ]
        },
        {
            "name": "Debug Program",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js"
        }
    ]
}